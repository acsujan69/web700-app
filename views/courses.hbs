<div class="container">
    <!-- Header section with a title and a button to add a new course -->
    <div class="d-flex justify-content-between align-items-center mt-5">
        <h2>Courses</h2>
        <a href="/courses/add" class="btn btn-success btn-lg custom-btn">Add New Course</a>
    </div>

    <!-- Check if there are any courses available -->
    {{#if courses.length}}
    <!-- Table to display course details -->
    <table class="table mt-3">
        <thead>
            <tr>
                <!-- Table headers for each column -->
                <th>Course Code</th>
                <th>Course Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <!-- Iterate through each course and create a table row -->
            {{#each courses}}
            <tr>
                <!-- Display course code with a link to the course details page -->
                <td><a href="/course/{{this.courseId}}">{{this.courseCode}}</a></td>
                <!-- Display course description with a link to filter students by course -->
                <td><a href="/students?course={{this.courseId}}">{{this.courseDescription}}</a></td>
                <!-- Button to remove the course with a link to the delete endpoint -->
                <td><a href="/course/delete/{{this.courseId}}" class="btn btn-danger">Remove</a></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{else}}
    <!-- Message displayed if there are no courses available -->
    <br>
    <p style="text-align: center;">No courses available</p>
    {{/if}}
</div>